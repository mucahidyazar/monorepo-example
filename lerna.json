{
    "workspaces": ["src/packages/*"],
    "version": "0.0.0",
    "npmClient": "yarn",
    "command": {
        "version": {
            "allowBranch": "main",
            "exact": true
        },
        "publish": {
            "registry": "http://localhost:4873",
            "message": "chore(release): Version bumped %s",
            "conventionalCommits": true,
            "createRelease": "github",
            "ignoreChanges": ["**/stories/**", "**/**/dist/**"],
            "allowBranch": "main"
        }
    }
}
